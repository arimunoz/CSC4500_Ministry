<p id="notice"><%= notice %></p>

<h1>Hispanic North Central Region</h1>
<%= link_to 'Add Church', new_church_path %>
<%= link_to 'List Camp Members', camp_members_path %>
<%= link_to 'Home', root_path %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>

<table>
  <thead>

      <th>Church name</th>
      <th>Pastor name</th>
      <th>Mens leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @churches.each do |church| %>
      <tr>
        <td><%= church.church_name %></td>
        <td><%= church.pastor_name %></td>
        <td><%= church.mens_leader %></td>
        <td><%= link_to 'Show', church %></td>
        <td><%= link_to 'Edit', edit_church_path(church) %></td>
        <td><%= link_to 'Destroy', church, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

