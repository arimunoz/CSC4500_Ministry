<p id="notice"><%= notice %></p>

<h1>Emergency Contacts</h1>
<%= link_to 'List Camp Member', camp_members_path %>
<%= link_to 'Add Church', new_church_path %>
<%= link_to 'List Churches', churches_path%>
<%= link_to 'Payment', payment_informations_path%>
<%= link_to 'Home', root_path %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Relationship</th>
      <th>Camp member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emergency_contacts.each do |emergency_contact| %>
      <tr>
        <td><%= emergency_contact.first_name %></td>
        <td><%= emergency_contact.last_name %></td>
        <td><%= emergency_contact.phone_number %></td>
        <td><%= emergency_contact.relationship %></td>
        <td><%= emergency_contact.camp_member_id %></td>
        <td><%= link_to 'Show', emergency_contact %></td>
        <td><%= link_to 'Edit', edit_emergency_contact_path(emergency_contact) %></td>
        <td><%= link_to 'Destroy', emergency_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

