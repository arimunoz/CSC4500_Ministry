<p id="notice"><%= notice %></p>

<h1>Message Board</h1>
<%= link_to 'Home', root_path %>
<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Message</th>
      <th>User</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><% if can? :update, post %><%= link_to 'Edit', edit_post_path(post) %><%end%></td>
        <td><% if can? :destroy, post %><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
